# OO금융지주 AICC 시스템 설정 예시
# 이 파일을 terraform.tfvars로 복사하고 실제 값으로 수정하세요

# 기본 설정
aws_region   = "ap-northeast-2"
environment  = "dev"
project_name = "salt-aicc"

# Amazon Connect 설정
connect_instance_alias            = "salt-financial-aicc-dev"
connect_identity_management_type  = "CONNECT_MANAGED"
connect_inbound_calls_enabled     = true
connect_outbound_calls_enabled    = true
connect_contact_flow_logs_enabled = true
connect_contact_lens_enabled      = true

# 업무 시간 설정
business_hours = {
  timezone = "Asia/Seoul"
  start_time = {
    hours   = 9
    minutes = 0
  }
  end_time = {
    hours   = 18
    minutes = 0
  }
  days = ["MONDAY", "TUESDAY", "WEDNESDAY", "THURSDAY", "FRIDAY"]
}

# 전화번호 설정
phone_number_country_code = "US"
phone_number_type         = "DID"

